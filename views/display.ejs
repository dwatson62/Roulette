<div class="container">
  <div class="row">
    <div class="col-md-4"><img src='http://gamblingplex.co.uk/wp-content/uploads/2014/01/roulette_wheel.jpg' style='height:230px'></div>
    <div class="col-md-4">
      <div class='display'>
        <h3><p>Place your bets</p></h3>
        <div id='player-balance' ng-model='rltCtrl.playerBalance'> £{{rltCtrl.playerBalance}}</div>
        <div id='amount-bet' ng-model='rltCtrl.totalBet'>Total bet £{{rltCtrl.totalBet}}</div>
        <div id='previous-result' ng-model="rltCtrl.number">Last number: {{rltCtrl.number}}</div>
        <div id='winnings' ng-model='rltCtrl.winnings'>Your winnings: £{{rltCtrl.winnings}}</div>
        Your bets:<div id='player-bet' ng-repeat='bets in rltCtrl.bet'><li> £{{bets.amount}} on {{bets.bet}} </li></div>
      </div>
      <br>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>